char *_strcat(char *dest, const char *src)
{
    int i = 0;
    int j = 0;

    while (dest[i] != '\0') /* Find the end of the destination string */
        i++;

    while (src[j] != '\0') /* Append the source string to the destination */
    {
        dest[i] = src[j];
        i++;
        j++;
    }

    dest[i] = '\0'; /* Null-terminate the concatenated string */
    return (dest);
}

